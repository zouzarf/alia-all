generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["config", "health", "live", "scheduler"]
}

model base_station_ports {
  name              String @unique @db.VarChar(255)
  hub_port          Int?
  relay_channel     Int?
  hub_serial_number Int?

  @@schema("config")
}

model general_config {
  name  String  @unique @db.VarChar(255)
  value String? @db.VarChar(255)

  @@schema("config")
}

model nodes {
  node_name String   @unique @db.VarChar(255)
  routers   routers?
  zones     zones?

  @@schema("config")
}

model routers {
  name                   String   @unique @db.VarChar(255)
  hub_serial_number      Int?     @unique
  hub_port               Int?
  relay_channel          Int?
  linked_to_base_station Boolean?
  nodes                  nodes    @relation(fields: [name], references: [node_name], onDelete: NoAction, onUpdate: NoAction)

  @@schema("config")
}

model routes {
  id                Int     @unique @default(autoincrement())
  src               String? @db.VarChar(255)
  dst               String? @db.VarChar(255)
  hub_port          Int?
  relay_channel     Int?
  hub_serial_number Int?

  @@unique([src, dst])
  @@schema("config")
}

model zones {
  name  String @unique @db.VarChar(255)
  nodes nodes  @relation(fields: [name], references: [node_name], onDelete: NoAction, onUpdate: NoAction)

  @@schema("config")
}

model logs {
  id          Int       @unique @default(autoincrement())
  producer    String?   @db.VarChar(255)
  ts          DateTime? @default(now()) @db.Timestamptz(6)
  module_name String?   @db.VarChar(255)
  log_level   String?   @db.VarChar(255)
  log_message String?   @db.VarChar(20000)

  @@schema("live")
}

model events_logs {
  id            Int       @unique @default(autoincrement())
  job_id        Int?
  action_id     Int?
  job_full_date DateTime? @db.Timestamptz(6)
  process_start DateTime? @db.Timestamptz(6)
  process_end   DateTime? @db.Timestamptz(6)
  status        String?   @db.VarChar(255)

  @@schema("scheduler")
}

model hardware {
  name      String    @unique @db.VarChar(255)
  heartbeat DateTime? @db.Timestamptz(6)

  @@schema("health")
}

model services {
  name      String    @unique @db.VarChar(255)
  heartbeat DateTime? @db.Timestamptz(6)

  @@schema("health")
}

model irrigation {
  id                Int       @unique @default(autoincrement())
  schedule_name     String    @db.VarChar(255)
  zone_name         String    @db.VarChar(255)
  date              DateTime  @db.Timestamptz(6)
  water_pump        Int?
  routing_time      Float?
  compressing_time  Float?
  warmup_pump       Float?
  warmup_compressor Float?
  process_start     DateTime? @db.Timestamptz(6)
  process_end       DateTime? @db.Timestamptz(6)
  status            String?   @db.VarChar(255)

  @@schema("scheduler")
}

model wireless_hubs {
  id Int    @unique @default(autoincrement())
  ip String @unique @db.VarChar(255)

  @@schema("config")
}
